@page
@model AddModel
@{
    ViewData["Title"] = "Add Project";
}

<div class="row" style="margin: 20px">
    <div class="col-lg-8 col-lg-offset-2">
        <div style="margin-bottom: 20px">
            <h1 class="text-center text-primary" style="margin-bottom: 20px">@ViewData["Title"]</h1>
            <h4 class="text-muted text-center">Fill out the form and create your new project.</h4>
        </div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.FormGroupFor(m => m.Title)
            @Html.FormGroupFor(m => m.Description)
            @Html.FormGroupFor(m => m.StartDate)
            @Html.FormGroupFor(m => m.EndDate)
            <div class="row">
                <div class="col-lg-2 col-lg-offset-5">
                    <button type="submit" class="btn btn-success btn-lg btn-huge">Add Project</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}